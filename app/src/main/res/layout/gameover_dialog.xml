<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/gameover_dialog">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginStart="10dp"
		android:layout_marginTop="60dp">

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@mipmap/ic_launcher_round"
			android:id="@+id/player1_img"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@mipmap/ic_launcher_round"
			android:layout_alignParentEnd="true"
			android:id="@+id/player2_img"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="player 1"
			android:id="@+id/dialog_player1_label"
			android:layout_below="@id/player1_img"
			android:textSize="18sp"
			android:textColor="#000000"/>

		<TextView
			android:id="@+id/dialog_player1_score"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="0"
			android:layout_below="@id/dialog_player1_label"
			android:layout_marginStart="10dp"
			android:textSize="50sp"
			android:textColor="#5D9B33"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="player 2"
			android:id="@+id/dialog_player2_label"
			android:layout_below="@id/player2_img"
			android:layout_alignParentEnd="true"
			android:textSize="18sp"
			android:textColor="#000000"/>

		<TextView
			android:id="@+id/dialog_player2_score"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="0"
			android:layout_below="@id/dialog_player2_label"
			android:layout_marginEnd="10dp"
			android:layout_alignParentEnd="true"
			android:textSize="50sp"
			android:textColor="#D96861"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="VS"
			android:textColor="#000000"
			android:layout_centerHorizontal="true"
			android:textSize="30sp"/>

	</RelativeLayout>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Rematch"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:textSize="18sp"
		android:id="@+id/gameover_dialog_rematch"
		android:layout_marginTop="40dp"/>

	<Button
		android:id="@+id/gameover_dialog_end_game"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="End Game"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="10dp"
		android:textSize="18sp"
		android:layout_marginBottom="40dp"/>

</LinearLayout>

