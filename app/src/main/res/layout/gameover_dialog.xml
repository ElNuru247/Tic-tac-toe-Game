<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#616161">
<LinearLayout
    android:id="@+id/gameover_dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Game Over"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/dialog_player1_Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/dialog_player2_Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/dialog_player1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_player1_Image"
            android:fontFamily="sans-serif-light"
            android:padding="5dp"
            android:text="player 1"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dialog_player1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_player1_label"
            android:layout_marginStart="10dp"
            android:text="0"
            android:textColor="#f5f5f5"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/dialog_player2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/dialog_player2_Image"
            android:fontFamily="sans-serif-light"
            android:padding="5dp"
            android:text="player 2"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dialog_player2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/dialog_player2_label"
            android:layout_marginEnd="10dp"
            android:text="0"
            android:textColor="#f5f5f5"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="VS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#f5f5f5"
            android:textSize="30sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/gameover_dialog_rematch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Rematch"
        android:textSize="18sp" />

    <Button
        android:id="@+id/gameover_dialog_end_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="End Game"
        android:textSize="18sp" />

</LinearLayout>

</ScrollView>